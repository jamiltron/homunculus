package com.jamiltron.homunculus.util;

import com.badlogic.gdx.utils.Array;

public class JArray<T> extends Array<T> {
  private float cols;
  private float rows;
  
  public JArray(int x, int y) {
    super(true, x * y);
    cols = x;
    rows = y;
  }
  
  public T get(float x, float y) {
    int ix = (int)x - 2;
    int iy = (rows - 1) - ((int)y - 2);
    return super.get(8 * iy + ix);
  }
  
  public void insert(float x, float y, T value) {
    int ix = (int)x - 2;
    int iy = 16 - ((int)y - 2);
    super.insert(8 * iy + ix, value);
  }

}
